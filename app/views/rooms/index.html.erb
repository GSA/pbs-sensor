<div class="container">

  <p id="notice"><%= notice %></p>

  <div class="row">
      <div class="col-md-4 filter-controls">
        <div class="panel panel-default">
          <div class="panel-body">
            <p>
              Temperature range:
              <label for="filter-temp-min" class="sr-only">Min:</label>
              <input type="text" id="filter-temp-min" class="filter-slider-value">
              to
              <label for="filter-temp-max" class="sr-only">Max:</label>
              <input type="text" id="filter-temp-max" class="filter-slider-value">
              &deg;F
            </p>
            <div id="slider-temperature-range" class="filter-slider" data-min="60" data-max="80" data-min-input-id="filter-temp-min" data-max-input-id="filter-temp-max"></div>
          </div>
        </div>
        <div class="panel panel-default">
          <div class="panel-body">
            <p>
              Noise level:
            </p>
            <div class="btn-group btn-group-justified" role="group" aria-label="Noise level selection" data-toggle="buttons">
              <label class="btn btn-default filter-button">
                <input type="checkbox" autocomplete="off" name="filter-sound" data-index="0" data-min="0" data-max="44.99">Quiet<br><small>&lt; 45 dB</small>
              </label>
              <label class="btn btn-default filter-button">
                <input type="checkbox" autocomplete="off" name="filter-sound" data-index="1" data-min="45" data-max="55">Typical<br><small>45-55 dB</small>
              </label>
              <label class="btn btn-default filter-button">
                <input type="checkbox" autocomplete="off" name="filter-sound" data-index="2" data-min="55.01" data-max="100">Noisy<br><small>&gt; 55 dB</small>
              </label>
            </div>
          </div>
        </div>
        <div class="panel panel-default">
          <div class="panel-body">
            <p>
              Air quality (CO<sub>2</sub>):
            </p>
            <div class="btn-group btn-group-justified" role="group" aria-label="Air quality selection" data-toggle="buttons">
              <label class="btn btn-default filter-button">
                <input type="checkbox" autocomplete="off" name="filter-co2" data-index="0" data-min="0" data-max="699.99">Fresh<br><small>&lt; 700 ppm</small>
              </label>
              <label class="btn btn-default filter-button">
                <input type="checkbox" autocomplete="off" name="filter-co2" data-index="1" data-min="700" data-max="1000">Okay<br><small>700-1000 ppm</small>
              </label>
              <label class="btn btn-default filter-button">
                <input type="checkbox" autocomplete="off" name="filter-co2" data-index="2" data-min="1000.01" data-max="5000">Stuffy<br><small>&gt; 1000 ppm</small>
              </label>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-8">
        <table id="room-list" class="table table-striped table-bordered responsive no-wrap" width="100%">
          <thead>
            <tr>
              <th>Room</th>
              <th>Description</th>
              <th>Time zone</th>
              <th>Temperature</th>
              <th>Sound Level</th>
              <th>Air Quality</th>
            </tr>
          </thead>
        </table>
      </div>
    </div><!--.row-->

  </div><!--.container-->

</div>
