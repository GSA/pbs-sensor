<div class="container">

  <p id="notice"><%= notice %></p>

  <div class="row">
      <div class="col-md-4">
        <div class="panel panel-default">
          <div class="panel-body">
            <p>
              Temperature range:
              <label for="filter-temp-min" class="sr-only">Min:</label>
              <input type="text" id="filter-temp-min" class="filter-slider-value">
              to
              <label for="filter-temp-max" class="sr-only">Max:</label>
              <input type="text" id="filter-temp-max" class="filter-slider-value">
              &deg;C
            </p>
            <div id="slider-temperature-range" class="filter-slider" data-min="15" data-max="30" data-min-input-id="filter-temp-min" data-max-input-id="filter-temp-max"></div>
          </div>
        </div>
        <div class="panel panel-default">
          <div class="panel-body">
            <p>
              Sound range:
              <label for="filter-sound-min" class="sr-only">Min:</label>
              <input type="text" id="filter-sound-min" class="filter-slider-value">
              to
              <label for="filter-sound-max" class="sr-only">Max:</label>
              <input type="text" id="filter-sound-max" class="filter-slider-value">
              dBm
            </p>
            <div id="slider-sound-range" class="filter-slider" data-min="40" data-max="60" data-min-input-id="filter-sound-min" data-max-input-id="filter-sound-max"></div>
          </div>
        </div>
        <div class="panel panel-default">
          <div class="panel-body">
            <p>
              Carbon dioxide range:
              <label for="filter-co2-min" class="sr-only">Min:</label>
              <input type="text" id="filter-co2-min" class="filter-slider-value">
              to
              <label for="filter-co2-max" class="sr-only">Max:</label>
              <input type="text" id="filter-co2-max" class="filter-slider-value">
              ppm
            </p>
            <div id="slider-co2-range" class="filter-slider" data-min="400" data-max="700" data-min-input-id="filter-co2-min" data-max-input-id="filter-co2-max"></div>
          </div>
        </div>
      </div>
      <div class="col-md-8">
        <table id="room-list" class="table table-striped table-bordered responsive no-wrap" width="100%">
          <thead>
            <tr>
              <th>Room</th>
              <th>Description</th>
              <th>Time zone</th>
              <th>Average temperature</th>
              <th>Average sound</th>
              <th>Average CO2</th>
            </tr>
          </thead>
        </table>
      </div>
    </div><!--.row-->

  </div><!--.container-->

</div>
